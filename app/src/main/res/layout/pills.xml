<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/PillHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:text="Medicamentos"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_alignParentTop="true"/>

    <RelativeLayout
        android:id="@+id/PillRelative0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/PillHeader">


        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/PillNames"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/PillName0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="Medicamento1"
                android:layout_centerVertical="true"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/PillFunc0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="Função1"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/PillName0"
                android:layout_toEndOf="@+id/PillName0"
                android:textSize="20sp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/PillInfos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/PillNames">

            <TextView
                android:id="@+id/NextPill0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="PróximaMedicação"
                android:textAlignment="center"
                android:layout_centerVertical="true"
                android:textSize="20sp" />

            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="85dp"
                android:layout_marginRight="85dp"
                android:src="@drawable/ic_notifications" />

            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_edit"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>